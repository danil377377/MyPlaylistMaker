<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/ButtonMarginTop</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
        <item name="cornerRadius">@dimen/ButtonCornerSize</item>
        <item name="icon">@drawable/settings</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400 </item>
    </style>
    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>

    </style>
    <style name="MainScreenBackStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#3772E7</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/Padding</item>
    </style>
    <style name="SettingsScreenBackStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/Padding</item>
    </style>

    <style name="Share">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/share</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="Support">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/support</item>
        <item name="android:layout_gravity">end</item>

    </style>
    <style name="Arrow_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:layout_gravity">end</item>

    </style>
    <style name="Arrow_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/arrow_back</item>


    </style>
    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/search_phone</item>
        <item name="android:hint">@string/search</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:inputType">text</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_hint</item>
    </style>
</resources>