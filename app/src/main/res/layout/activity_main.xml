<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3772E7"
    android:orientation="vertical"
    android:padding="@dimen/Padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:text="Playlist maker"
            android:textColor="@color/white"
            android:textSize="@dimen/HeaderSize" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"

        android:orientation="vertical">


        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/TextSearch"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/ButtonTextSize"
            app:cornerRadius="@dimen/ButtonCornerSize"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconTint="@color/YP_Black"/>


        <Button
            android:id="@+id/media"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/ButtonMarginTop"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/Media"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/ButtonTextSize"
            app:cornerRadius="@dimen/ButtonCornerSize"
            app:icon="@drawable/media"
            app:iconGravity="textStart"
            app:iconTint="@color/YP_Black"/>

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/ButtonMarginTop"

            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/Settings"

            android:textColor="@color/YP_Black"
            android:textSize="@dimen/ButtonTextSize"
            app:cornerRadius="@dimen/ButtonCornerSize"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconTint="@color/YP_Black"/>
    </LinearLayout>
</LinearLayout>