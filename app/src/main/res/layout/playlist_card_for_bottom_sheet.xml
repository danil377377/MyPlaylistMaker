<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="13dp"
    android:layout_marginTop="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <ImageView
            android:id="@+id/playlist_image"
            style="@style/PlaceHolder"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/marginCard"
            android:layout_marginStart="@dimen/text_card_margin_start"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/playlist_name"
                style="@style/SongTextStyle"
                android:layout_width="match_parent"
                android:text="56 songs"
                android:layout_gravity="top"
                />

            <TextView
                android:id="@+id/playlist_quantity"
                style="@style/SingerName"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="56 songs"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>