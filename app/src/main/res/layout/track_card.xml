<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <ImageView
            android:id="@+id/song_icon"
            style="@style/PlaceHolder"

            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/marginCard"
            android:layout_marginStart="@dimen/text_card_margin_start"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/song_name"
                style="@style/SongTextStyle"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                />
            <TextView
                android:id="@+id/singer_name"
                style="@style/SingerName"
                android:layout_width="match_parent"
                >
            </TextView>
        </LinearLayout>
        <ImageView
            style="@style/Arrow_right"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/text_card_margin_start"
            android:layout_marginTop="@dimen/arrow_song_margin_top"
            android:layout_marginEnd="@dimen/arrow_song_margin_end"
            android:layout_marginBottom="@dimen/arrow_song_margin_bottom">
        </ImageView>
    </LinearLayout>

</LinearLayout>

