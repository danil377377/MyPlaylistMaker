<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="bottom_nav">
        <item name="android:background">@color/YP_Black</item>
        <item name="itemIconTint">@color/nav_bar_dark</item>
        <item name="itemTextColor">@color/nav_bar_dark</item>


    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/ButtonMarginTop</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
        <item name="cornerRadius">@dimen/ButtonCornerSize</item>
        <item name="icon">@drawable/settings</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="RetryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/ButtonCornerSize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="MediaButtonStyle" parent="ButtonStyle">
        <item name="icon">@drawable/media</item>
    </style>

    <style name="SearchButtonStyle" parent="ButtonStyle">
        <item name="icon">@drawable/searchbig</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="MediaTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>

    </style>
    <style name="SongTextStyle" parent="SettingsTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="SingerName" parent="SettingsTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
    <style name="InfoName" parent="SettingsTextStyle">

        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

        <item name="android:textColor">@color/grey_hint</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="Info" parent="SettingsTextStyle">

        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="Share">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/share_darkv</item>
        <item name="android:layout_gravity">end</item>

    </style>

    <style name="Support">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/suppport_darkc</item>
        <item name="android:layout_gravity">end</item>


    </style>

    <style name="Arrow_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_right_darck</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="Arrow_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/dark_mode_arrow_back</item>


    </style>
    <style name="Add_to_playlist">
        <item name="android:src">@drawable/add_to_playlist_dark</item>
    </style>
    <style name="Play">
        <item name="android:src">@drawable/play_dark</item>
    </style>
    <style name="Pause">
        <item name="android:src">@drawable/pause_dark</item>
    </style>
    <style name="Add_to_favorites">
        <item name="android:src">@drawable/add_to_favorite_dark</item>
    </style>
    <style name="Delete_from_favorites">
        <item name="android:src">@drawable/deletefromfavoritesbuttondark</item>
    </style>


    <style name="Edit_text_dashes">
        <item name="android:background">@drawable/edit_text_selector_make_playlist_dark</item>
        <item name="android:textColorHint">@color/white</item>
    </style>




    <style name="PlaceHolder">
        <item name="android:layout_width">@dimen/card_image</item>
        <item name="android:layout_height">@dimen/card_image</item>
        <item name="android:src">@drawable/placeholder</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Add_photo">
        <item name="android:src">@drawable/add_photo_placeholder_dark</item>
    </style>

    <style name="MainScreenBackStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/YP_Black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/Padding</item>
    </style>

    <style name="SettingsScreenBackStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/YP_Black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/Padding</item>
    </style>
    <style name="ScreenBackStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/YP_Black</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/search_phone_dark</item>
        <item name="android:hint">@string/search</item>
        <item name="android:drawableStart">@drawable/search_icon__1_</item>
        <item name="android:inputType">text</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="ClearButtonStyle" >
        <item name="android:src">@drawable/clear_button_dark</item>
    </style>
    <style name="ErrorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ErrorTextMedia">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="NothingFoundIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/error_dark_mode</item>

    </style>
    <style name="InternetProblemsIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/internet_problemsdark_mode</item>

    </style>
    <style name="TablayoutTextMedia">
        <item name="android:background">@color/YP_Black</item>
        <item name="tabTextColor">@color/white</item>
<!--        <item name="tabIndicator">@color/white</item>-->
    </style>
</resources>